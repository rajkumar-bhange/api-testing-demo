{
  "name": "api-testing-demo",
  "version": "1.0.0",
  "description": "API Testing Automation Framework with Playwright and Allure Reporting",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "allure serve allure-results",
    "test:generate-report": "allure generate allure-results --clean -o allure-report",
    "test:jenkins": "playwright test --reporter=html,allure-playwright",
    "test:ci": "playwright test --reporter=allure-playwright",
    "install:allure": "npm install -g allure-commandline",
    "setup": "playwright install",
    "jenkins:setup": "npm ci && npx playwright install --with-deps",
    "jenkins:test": "npm run test:ci && npm run test:generate-report"
  },
  "keywords": [
    "api-testing",
    "playwright",
    "allure",
    "automation",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.10.0",
    "allure-commandline": "^2.24.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0"
  }
}
